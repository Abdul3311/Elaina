    "compilerOptions": {
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./lib",
        "noEmitHelpers": false,
        "target": "ESNext",
        "moduleResolution": "node",
        "module": "CommonJS",
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./lib/"
    ]
}